# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Query {
  worries(orderBy: WorryOrderField!, page: PaginationInput!): WorryConnection!
  users: [User!]!
  worry(id: Int!): Worry!
  user(id: Int!): User!
}

type Mutation {
  createWorry(input: NewWorry!): Worry!
  updateWorry(input: UpdateWorryInput): Worry!
}

